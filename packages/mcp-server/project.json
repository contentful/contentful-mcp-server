{
  "name": "mcp-server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mcp-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/mcp-server/dist"],
      "options": {
        "command": "npm run build",
        "cwd": "packages/mcp-server"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/mcp-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "packages/mcp-server"
      }
    },
    "test:run": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "vitest run",
        "cwd": "packages/mcp-server"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist",
        "cwd": "packages/mcp-server"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check \"**/*.{ts,js,json,md}\"",
        "cwd": "packages/mcp-server"
      }
    },
    "format:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"**/*.{ts,js,json,md}\"",
        "cwd": "packages/mcp-server"
      }
    },
    "update-licenses": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/update-licenses.js",
        "cwd": "packages/mcp-server"
      }
    },
    "update-version": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run search-and-replace-mcp-version",
        "cwd": "packages/mcp-server"
      }
    }
  },
  "tags": []
}
